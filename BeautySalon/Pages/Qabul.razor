@code {
    [Parameter]
    public int cliyentId { get; set; }
    Note note = new Note();
    private async void AddNote()
    {
        if(note.Vaqt == null || note.Kun == null)
        {
            nv.NavigateTo("warning");
        }
        else
        {
            note.clt = await Repository.GetByIdClient(cliyentId);
            await NoteService.CreateNote(note);
            nv.NavigateTo("success");
        }
       
    }
